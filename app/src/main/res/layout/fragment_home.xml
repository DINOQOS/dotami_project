<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            app:srcCompat="@drawable/dotami_logoooo" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="등록된 정보"
            android:textStyle="bold" />


        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/map_info_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        android:background="@drawable/background_radius_30dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_locationinf"
                android:text="위치 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_dateinf"
                android:text="날짜 : "
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/btn_checkinf"
            android:layout_margin="10dp"
            android:background="@drawable/baseline_arrow_forward_ios_24"
            android:layout_width="wrap_content"
            android:layout_height="45dp"/>




    </LinearLayout>

=




</androidx.constraintlayout.widget.ConstraintLayout>